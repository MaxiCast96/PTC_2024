<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#362F5C"
    android:backgroundTint="#362F5C"
    tools:context=".activity_restablcer_cantra">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/AnimContraseña"
        android:layout_width="145dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/reccontra" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtNuevaContraseña"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F85D74"
        android:hint="Nueva Contraseña"
        android:textColorHint="#FFFFFF"
        app:boxStrokeColor="#F85D74"
        app:cursorColor="#F85D74"
        app:helperTextTextColor="#F85D74"
        app:hintTextColor="#F85D74"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        app:placeholderTextColor="#F85D74"
        app:prefixTextColor="#F85D74"
        app:suffixTextColor="#F85D74">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#A42833"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtConfirmarNuevaContraseña"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F85D74"
        android:hint="Confirmar Nueva Contraseña"
        android:textColorHint="#FFFFFF"
        app:boxStrokeColor="#F85D74"
        app:cursorColor="#F85D74"
        app:helperTextTextColor="#F85D74"
        app:hintTextColor="#F85D74"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:placeholderTextColor="#F85D74"
        app:prefixTextColor="#F85D74"
        app:suffixTextColor="#F85D74">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#A42833"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCambiarContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F85D74"
        android:text="Cambiar Contraseña"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:text="Recuperar Contraseña"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>
